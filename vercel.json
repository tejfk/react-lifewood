{
  "version": 2,
  "builds": [
    {
      "src": "/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "/backend/server.js"
    },
    {
      "source": "/:match*",
      "destination": "/index.html"
    }
  ]
}